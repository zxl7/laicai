# 应用基本信息
APP_TITLE=laicai-stock
APP_VERSION=0.1.0
APP_DESCRIPTION=企业级股票数据服务项目

# 服务器配置
HOST=0.0.0.0
PORT=8000
RELOAD=True
WORKERS=1

# API配置
API_PREFIX=/api
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json

# 数据库配置
DATABASE_URL=sqlite:///./laicai-stock.db
DATABASE_ECHO=False
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# CORS配置
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# 第三方API配置
AK_SHARE_TIMEOUT=30
AK_SHARE_RETRY=3